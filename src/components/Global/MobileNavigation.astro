<div id="mobile-nav" class="mobile-nav">
  <div id="hamburger" class="hamburger">
    <div class="top"></div>
    <div class="middle"></div>
    <div class="bottom"></div>
  </div>
  <div class="mobile-nav-overlay">
    <ul>
      <li><a href="/#services">Services</a></li>
      <li><a href="/#work">Work</a></li>
      <li><a href="/#contact">Contact</a></li>
      <!-- <li><a href="/blog">Blog</a></li> -->
    </ul>
  </div>
</div>

<style>
  .mobile-nav {
    display: block;
  }

  @media (min-width: 768px) {
    .mobile-nav {
      display: none;
    }
  }

  .hamburger {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2rem;
    height: 2rem;
    z-index: 3;
    cursor: pointer;
  }

  .hamburger .top,
  .hamburger .middle,
  .hamburger .bottom {
    height: 2px;
    background: var(--color-black);
    border-radius: 5px;
    transition: var(--transition-normal);
  }

  .hamburger .top,
  .hamburger .bottom {
    width: 32px;
  }

  .hamburger .top {
    transform: translateY(-4px);
  }

  .hamburger .middle {
    width: 42px;
    align-self: flex-end;
  }

  .hamburger .bottom {
    transform: translateY(4px);
  }

  .hamburger.active .top {
    transform: translateY(2px) rotate(45deg);
  }

  .hamburger.active .middle {
    transform: translateX(-50px);
    opacity: 0;
  }

  .hamburger.active .bottom {
    transform: translateY(-2px) rotate(-45deg);
  }

  .mobile-nav-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    padding-top: 170px;
    opacity: 0;
    z-index: -1;
    visibility: hidden;
    background-color: var(--color-white-transparent);
    -webkit-backdrop-filter: saturate(180%) blur(5px);
    backdrop-filter: saturate(180%) blur(5px);
    box-shadow: var(--box-shadow-light);
    transition: var(--transition-normal);
    border-radius: 1rem;
  }

  .hamburger.active + .mobile-nav-overlay {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .mobile-nav li {
    font-size: var(--size-extra-large);
    margin-bottom: 2rem;
    text-align: center;
  }
</style>

<script>
  const body = document.querySelector('body') as HTMLBodyElement
  const hamburger = document.getElementById('hamburger') as HTMLDivElement
  const mobileNavItems = document.querySelectorAll('.mobile-nav-overlay li')
  let overlayDisplayed = false

  function handleMobileNavigationOnClick() {
    overlayDisplayed = !overlayDisplayed
    body.setAttribute('data-overlay-displayed', `${overlayDisplayed}`)
    hamburger.classList.toggle('active')
  }

  function handleMobileNavigationOnResize() {
    if (window.innerWidth >= 768) {
      overlayDisplayed = false
      body.setAttribute('data-overlay-displayed', `${overlayDisplayed}`)
      hamburger.classList.remove('active')
    }
  }

  hamburger.addEventListener('click', handleMobileNavigationOnClick)
  window.addEventListener('resize', handleMobileNavigationOnResize)
  mobileNavItems.forEach((item) =>
    item.addEventListener('click', handleMobileNavigationOnClick)
  )
</script>
