---
// Components
import SocialIcons from '../Global/SocialIcons.astro'
import BouncingArrow from '../Global/BouncingArrow.astro'
import JoshCta from '../Global/JoshCta.astro'

// Images
import headshot from '/headshot-ai.webp'
import SectionHeader from '../Global/SectionHeader.astro'
---

<header id="header">
  <section class="header-info">
    <img src={headshot} width="250" height="250" alt="Josh Nussbaum headshot" />
    <div class="info">
      <SectionHeader text="Hi, I'm Josh" />
      <p>
        I'm a web developer and musician currently making stuff in Madison, WI.
      </p>
      <JoshCta text="Contact me" href="/#contact" />
      <SocialIcons />
    </div>
  </section>
  <BouncingArrow />
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
  }

  .header-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: 8vw;
    margin-bottom: 4rem;
    padding: 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .header-info {
      flex-direction: row-reverse;
      justify-content: center;
      gap: 2vw;
      margin-bottom: 10rem;
      padding: 2rem;
      text-align: left;
    }
  }

  .header-info img {
    width: 48vw;
    height: 100%;
    max-width: 250px;
    box-shadow: var(--box-shadow-light);
    border: 2px solid var(--color-black);
    border-radius: 50%;
  }

  .info h2 {
    margin-bottom: 1rem;
    font-size: var(--size-large);
  }

  @media (min-width: 768px) {
    .info h2 {
      font-size: var(--size-extra-large);
      text-align: left;
    }
  }

  .info p {
    width: 90%;
    max-width: 43.5rem;
    margin: 0 auto 1rem;
    font-size: var(--size-small);
    font-weight: var(--weight-bold);
  }

  @media (min-width: 768px) {
    .info p {
      margin: 0 0 1rem;
      font-size: var(--size-medium);
    }
  }

  .info a {
    margin-bottom: 1.5rem;
  }
</style>
