---
// Components
import Navigation from '../components/Global/Navigation.astro'
import Footer from '../components/Global/Footer.astro'

// Images
import favicon from '/favicon.png'
import headshot from '/headshot-ai.webp'

export interface Props {
  title: string
  description?: string
  url: string
}

const { title, description, url } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content="Josh Nussbaum" />
    <meta property="og:url" content={url} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={headshot} />
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:site" content="@Joshnussbaum" />
    <meta property="twitter:creator" content="@Joshnussbaum" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Marcellus&family=Outfit&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href={favicon} type="image/png" />
    <title>{title}</title>
  </head>
  <body>
    <div class="site-wrapper">
      <Navigation />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --size-extra-small: 1rem;
    --size-small: 1.25rem;
    --size-medium: 1.5rem;
    --size-large: 2.25rem;
    --size-extra-large: 3rem;

    --color-black: #1e1e1e;
    --color-white: #fcfcfc;
    --color-white-transparent: #fcfcfcee;
    --color-grey: #b5b5b5;
    --color-grey-text: #9c9c9c;
    --color-light-grey: #d9d9d9;
    --color-dark-grey-transparent: #44444440;
    --color-green: #b2f0d1;
    --color-light-green: #d7ffeb;
    --color-purple: #771dab;
    --color-light-purple: #edcdff;
    --color-red: #de3726;
    --gradient-background: linear-gradient(
      135deg,
      var(--color-light-green),
      var(--color-light-purple),
      var(--color-light-green)
    );

    --box-shadow-normal: 2px 2px 10px var(--color-grey);
    --box-shadow-light: 2px 2px 10px var(--color-dark-grey-transparent);

    --transition-normal: all 0.3s ease-in-out;
    --transition-fade: opacity 0.6s ease-in-out;

    --hover-opacity-link: 0.7;
  }

  * {
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  html,
  body {
    padding: 0;
    margin: 0;
  }

  body {
    background: var(--gradient-background);
    font-family: 'Outfit', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    letter-spacing: 1px;
    overflow: auto;
  }

  body[data-overlay-displayed='true'] {
    overflow: hidden;
  }

  .site-wrapper {
    position: relative;
    width: 95%;
    max-width: 1440px;
    display: block;
    margin: 0.75rem auto;
    color: var(--color-black);
    background-color: var(--color-white);
    border-radius: 1rem;
    box-shadow: var(--box-shadow-light);
  }

  @media (min-width: 768px) {
    .site-wrapper {
      margin: 2rem auto;
    }
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: 'Marcellus', sans-serif;
    margin: 0;
    font-weight: var(--weight-extra-bold);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  p {
    margin: 0;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    list-style-type: none;
  }

  input,
  textarea,
  button {
    font-family: 'Outfit', sans-serif;
  }

  #header,
  #services,
  #work {
    margin-bottom: 8rem;
  }

  #services,
  #work,
  #contact {
    padding: 1rem;
  }

  @media (min-width: 768px) {
    #services,
    #work,
    #contact {
      padding: 2rem;
    }
  }

  .josh-cta {
    display: inline-block;
    color: var(--color-white);
    background-color: var(--color-black);
    border: 2px solid var(--color-black);
    border-radius: 5px;
    box-shadow: var(--box-shadow-light);
    transition: var(--transition-normal);
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .josh-cta:hover {
      color: var(--color-black);
      background-color: var(--color-white);
      box-shadow: var(--box-shadow-normal);
    }
  }

  /* Animations */

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0) rotate(225deg);
    }
    40% {
      transform: translateY(-0.5rem) rotate(225deg);
    }
    60% {
      transform: translateY(-0.25rem) rotate(225deg);
    }
  }
</style>
